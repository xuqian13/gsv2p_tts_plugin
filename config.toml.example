# GSV2P TTS 插件配置文件示例
# 复制此文件为 config.toml 并填写您的配置

# 插件基本配置
[plugin]
enabled = true

# 组件启用控制
[components]
action_enabled = true    # 启用自动触发
command_enabled = true   # 启用手动命令

# GSV2P API配置
[gsv2p]
# API地址
api_url = "https://gsv2p.acgnai.top/v1/audio/speech"

# API Token（必填！请在 https://gsv2p.acgnai.top 注册获取）
api_token = "your_api_token_here"

# 默认音色（必填！）
default_voice = "原神-中文-派蒙_ZH"

# 请求超时时间（秒）
timeout = 120

# TTS模型
model = "tts-v4"

# 音频格式
response_format = "mp3"

# 语音速度
speed = 1.0

# 文本语言
text_lang = "中英混合"

# 提示语言
prompt_lang = "中文"

# 情感
emotion = "默认"

# Top-K采样
top_k = 10

# Top-P采样
top_p = 1.0

# 温度参数
temperature = 1.0

# 文本分割方法
text_split_method = "凑四句一切"

# 批处理大小
batch_size = 1

# 批处理阈值
batch_threshold = 0.75

# 是否分桶
split_bucket = true

# 片段间隔
fragment_interval = 0.3

# 是否并行推理
parallel_infer = true

# 重复惩罚
repetition_penalty = 1.35

# 采样步数
sample_steps = 16

# 是否超分辨率
if_sr = false

# 随机种子
seed = -1
